{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "üîç Debug Current File (Native + Docker)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/build/native/${fileBasenameNoExtension}.native",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ],
        "preLaunchTask": "DEBUG-Build Current Directory (Local/Dev Container)"
    },
    {
        "name": "‚ñ∂Ô∏è Run Current File (Native, No Debug)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/build/native/${fileBasenameNoExtension}.native",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [],
        "preLaunchTask": "RUN-Build Current Directory (Local/Dev Container)"
    }
    ]
}
